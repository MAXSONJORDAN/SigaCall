    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Executar Modo Desenvolvimento",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**",
                "${workspaceFolder}/node_modules/**/*.js"
            ],
            "program": "dev",
            "runtimeExecutable": "yarn",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Executar Modo Produção",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**",
                "${workspaceFolder}/node_modules/**/*.js"
            ],
            "program": "start",
            "runtimeExecutable": "yarn",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}